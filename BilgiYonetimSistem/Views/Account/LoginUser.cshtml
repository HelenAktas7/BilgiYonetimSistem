@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BilgiYonetimSistem.Models.LoginVM

@{
    ViewData["Title"] = "User Login";
}

<h2 style="color: #5DADE2; text-align: center;">User Login</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" style="text-align: center;">@ViewBag.Message</div>
}

<style>
    body {
        background-color: #EAF6F6;
        font-family: Arial, sans-serif;
    }

    form {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border: 1px solid #5DADE2;
        border-radius: 10px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .form-group label {
        color: #1B4F72;
        font-weight: bold;
    }

    .form-control {
        border: 1px solid #5DADE2;
        border-radius: 5px;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 5px #5DADE2;
        }

    button.btn-primary {
        background-color: #5DADE2;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        button.btn-primary:hover {
            background-color: #EAF6F6;
            color: #5DADE2;
            border: 1px solid #5DADE2;
            cursor: pointer;
            opacity: 0.9;
        }

    a {
        color: #1B4F72;
        text-decoration: none;
    }

        a:hover {
            color: #5DADE2;
            text-decoration: underline;
        }

    .alert-danger {
        color: white;
        background-color: #E74C3C;
        padding: 10px;
        border-radius: 5px;
    }
</style>

<form asp-action="LoginUser" method="post" asp-controller="Account">
    <div class="form-group">
        <label>Username</label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="Role" class="form-control">
            <option value="Student">Student</option>
            <option value="Advisor">Advisor</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<p style="text-align: center; margin-top: 10px;">
    <a asp-action="ForgotPassword">Forgot Password?</a>
</p>

