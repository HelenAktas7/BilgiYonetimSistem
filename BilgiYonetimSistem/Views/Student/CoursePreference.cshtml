@model IEnumerable<BilgiYonetimSistem.Models.Course>

<div class="container">
    <h2>Ders Seçim</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }

    <form method="post" asp-action="CourseSelection">
        <div class="form-group">
            <label for="CourseSelection">Dersler:</label>
            <div id="CourseSelection" class="form-check">
                @foreach (var course in Model)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               id="course_@course.CourseId"
                               name="selectedCourseIds"
                               value="@course.CourseId" />
                        <label class="form-check-label" for="course_@course.CourseId">
                            @course.CourseName
                        </label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Seç</button>
    </form>
</div>
