@model List<BilgiYonetimSistem.Models.Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ders Seçimi</title>
    <style>

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f4f8;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }


        .card {
            background-color: #fff;
            max-width: 800px;
            width: 100%;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 20px;
        }

            .card h1 {
                text-align: center;
                font-size: 1.8rem;
                color: #0288d1;
                margin-bottom: 20px;
            }


        .error-message {
            background-color: #e53e3e;
            color: #fff;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        /* Ders Grupları */
        .group {
            background-color: #e6f1ff;
            border-left: 4px solid #0288d1;
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 5px;
        }

            .group h3 {
                font-size: 1.2rem;
                color: #2a4365;
                margin-bottom: 10px;
            }

            .group ul {
                list-style: none;
                padding: 0;
            }

            .group li {
                display: flex;
                align-items: center;
                margin-bottom: 10px;
            }

            .group input[type="checkbox"] {
                margin-right: 10px;
                height: 18px;
                width: 18px;
                cursor: pointer;
                accent-color: #fff;
            }

            .group label {
                cursor: pointer;
                color: #333;
            }


        .btn-submit {
            display: block;
            margin: 0 auto;
            padding: 10px 30px;
            background-color: #0288d1;
            color: #fff;
            border: none;
            border-radius: 20px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-submit:hover {
                background-color: #1d334d;
            }

        }
    </style>
</head>
<body>


    <div class="card">

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="error-message">
                @TempData["ErrorMessage"]
            </div>
        }


        <h1>Ders Seçimi</h1>


        <form method="post" action="/Student/SaveCourseSelection">

         
                <div class="group">
                    <h3>Grup </h3>
                    <ul>
                        @foreach (var course in Model)
                        {
                            <li>
                                <input type="checkbox" name="selectedCourseIds" value="@course.CourseId" id="course-@course.CourseId" />
                                <label for="course-@course.CourseId">@course.CourseName</label>
                            </li>
                        }
                    </ul>
                </div>
          


            <button type="submit" class="btn-submit">Ders Seç</button>
        </form>
    </div>

</body>
</html>